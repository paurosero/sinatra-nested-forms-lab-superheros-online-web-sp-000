<div class="team">
  <h1><%= @team.name %></h1>
  <h2>Team Motto: <%= @team.motto %>!</h2>
</div><br>

<% @members.each do |member| %>
  <div class="member">
    <h3>Hero Name: <%= member.name %></h3><br>
    <p>Hero Power: <%= member.power %></p>
    <p>Hero Biography: <%= member.bio %></p>
  </div><br>
  <% end %>

